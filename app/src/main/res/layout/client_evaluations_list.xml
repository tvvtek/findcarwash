<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/washEvaluationsList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/evaluationListBackgroundColor"
    tools:context="ru.findcarwash.findcarwash.workscreens.ClientFragmentOneHelpers.WashListReviewEvaluations">
    <TextView
        android:fontFamily="@font/arial"
        android:id="@+id/evaluationReviewText"
        android:layout_width="match_parent"
        android:text="@string/evaluationsListReview"
        android:layout_gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:textSize="20dp"
        android:background="@color/startClientWorkScreenActionBar"
        android:textColor="@color/evaluationListTextColor"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:layout_marginTop="10dp"
        android:id="@+id/evaluationsProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="invisible"
        android:id="@+id/evaluationEmptyText"
        android:fontFamily="@font/arial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:text="@string/evaluationScreenListTextEmpty"
        android:gravity="center|top"
        android:textColor="@color/evaluationListEmptyTextColor"
        android:textSize="20dp"
        />

    <ListView
        android:id="@+id/evaluationsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="20px">
    </ListView>
</LinearLayout>