<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/evaluationListBackgroundColor"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/evaluationListBackgroundColor"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/evaluationItemClientLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wash_list_evaluation_item_circle"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/evaluationListTextColor"
            android:text="WW"
            />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/evaluationItemClientRating"
                android:layout_gravity="left"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/evaluationItemWashReview"
                android:layout_gravity="left"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:textColor="@color/evaluationListEmptyTextColor"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:background="@color/evaluationListItemStroke"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>