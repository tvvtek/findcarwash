<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatListItemLayout"
    android:paddingTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/clientFragmentTwoChatItemImg"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <ImageView
            android:id="@+id/clientFragmentTwoChatItemNewMess"
            android:src="@drawable/chat_list_new_mess"
            android:visibility="invisible"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="3dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/clientFragmentTwoChatItemText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingTop="10dp"
                android:text="text"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/clientFragmentTwoChatItemSubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:text="subText"
                android:textColor="@color/fragmentTwoDescriptionTextColor"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/clientFragmentTwoChatItemData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:text="26.12.18 11:45:22"
                android:textColor="@color/fragmentTwoDescriptionTextColor"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/clientFragmentTwoChatIemSelect"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:background="@drawable/chat_list_item_select"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:background="@color/colorPrimaryDark"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="3dp" />
</LinearLayout>