<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/fragmentOneBackgroundItem"
    android:dividerHeight="10.0sp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/washPhoto"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:layout_width="100dp"
        android:layout_height="100dp">
    </ImageView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/shortName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Интеркабель"
            android:textSize="20dp">
        </TextView>
        <ImageView
            android:id="@+id/catalogWashRating"
            android:layout_width="80dp"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/washMinPrice"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цены от: 1000">
        </TextView>
        <TextView
            android:id="@+id/washDescription"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Описание">
        </TextView>
        </LinearLayout>
</LinearLayout>
